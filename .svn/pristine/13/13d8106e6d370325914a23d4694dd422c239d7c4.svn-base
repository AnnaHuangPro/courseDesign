

<div class="row">
	<div class="col-md-12">
		<div class="btn-group formBtnGroup">
		<dpagination class="pull-left" grid-name="permissionListGrid"></dpagination>
			<a class="btn " ng-click="addPermission()"
				ng-if="hasPermission('permission_add')">
				<i class='glyphicon glyphicon-plus-sign'></i>新增</a> 
			<a class="btn" ng-click="refreshGrid()">
				<i class='glyphicon glyphicon-refresh'></i>刷新</a>
		</div>
		<dcolumnfilter class="pull-right" grid-name="permissionListGrid"/>
	</div>
		<ddatagrid
			 class="col-md-12"
			 id="permissionListGrid"
			 name="permissionListGrid"
			 operation-columns='operationColumns'
			 operation-bar-buttons='operationBarButtons'
			 list-view-key="permissionList"> 
		</ddatagrid>
	</div>