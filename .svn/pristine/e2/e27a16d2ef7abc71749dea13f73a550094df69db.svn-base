<style>
.modal-body .hint{
font-weight: normal;
padding-left:5px;
text-align: left;
}
.modal-body .rangeFrom{
width:45%; float:left;
}
.modal-body .rangeLine{
width:6%;height:17px;border-bottom:1px solid #bbbbbb; float: left;margin: 0 2%;
}
.modal-body .rangeTo{
width:45%;float:right;
}

</style>
<div class="modal-header">
	<a class="close" href="javscript:void(0)" ng-click="cancelClick()">×</a>
	<h4 class="modal-title">
		高级检索
	</h4>
</div>
<div class="modal-body">
	<div class="row">
		<ng-form class="form-horizontal" name="advancedSearchForm" novalidate>
		<div class="form-group form-content" ng-repeat = "condition in conditions">
			<label class=" col-md-2 control-label " >{{condition.label}}:</label>
			<span class = " col-md-2 control-label hint">{{condition.hint}}</span>
			<div class=" col-md-7"  ng-switch = condition.type>
				<input ng-switch-when="text" type="text" class="form-control" ng-model="condition.value" />
				<div ng-switch-when="textRange"><input type="text" class="form-control rangeFrom"  ng-model="condition.value.from" />
					<div class = "rangeLine"></div><input  type="text" class="form-control rangeTo" ng-model="condition.value.to" /></div>
				<input ng-switch-when="date"  ddatepicker type="text" class="form-control" ng-model="condition.value" />
				<div ng-switch-when="dateRange"><input ddatepicker type="text" class="form-control rangeFrom" ng-model="condition.value.from" />
					<div class = "rangeLine"></div><input  ddatepicker  class="form-control rangeTo" ng-model="condition.value.to" /></div>
				<dselect ng-switch-when="codeTable"  code-table-key="{{condition.codeTableKey}}" class="form-control" ng-model="condition.value" />
				<dreference ng-switch-when="reference"  list-view-key="{{condition.listViewKey}}" show-model-filed='{{condition.showModelFiled}}' bind-field='{{condition.bindField}}' class="form-control" ng-model="condition.value" />
				
			</div>
		</div>

		<div class="form-group form-content">
			<label class=" col-md-2  control-label"></label>
			<div class=" col-md-9">
				<div class='btn-group btn-group-md pull-right'>
					<button class="btn btn-primary" type="button"
						ng-click="advancedSearch()" ng-disabled="advancedSearchForm.$invalid">搜索</button>
					<button class="btn btn-default" type="button"
						ng-click="rest()">清空</button>
					<button class="btn btn-default" type="button"
						ng-click="cancelClick()">取消</button>
				</div>
			</div>
		</div>
		</ng-form>
	</div>
</div>
