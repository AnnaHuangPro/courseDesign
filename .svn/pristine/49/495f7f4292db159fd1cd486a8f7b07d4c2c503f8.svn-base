<div ng-controller="roleFormController">
	<div class="row" ng-init="initRoleData()">
		<form class="col-md-12 form-horizontal" name="roleOperateForm"
			role="form" ddd-form-validate novalidate>
			
			
			
			<fieldset>
				<legend class="legend" data-toggle="collapse" href="#baseInfo"
					style="cursor: pointer">
					<span class="legend-title">基础信息</span>
				</legend>
			
			
			
			
<!-- 			<div class="row rowddd"></div> -->
			<div class="form-group">
				<label class="col-md-2 control-label" for="name">角色名称</label>
				<div class="col-md-10">
					<input type="text" class="form-control" name="name"
						ng-model="role.name" required>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-2 control-label" for="code">编码</label>
				<div class="col-md-10">
					<input type="text" class="form-control" name="code"
						ng-model="role.code" required>
				</div>
			</div>
<!-- 			<div class="form-group"> -->
<!-- 				<div class="col-md-offset-2 col-md-10"> -->

<!-- 					<input class="btn btn-primary" type="button" value="保存" -->
<!-- 						ng-click="saveRoleOperate(role)" ng-disabled="roleOperateForm.$invalid" /> -->

<!-- 					<input class="btn btn-primary" type="button" value="返回" -->
<!-- 						ng-click="closeOperateTab()" /> -->
<!-- 				</div> -->
<!-- 			</div> -->

		<div class="form-group">
			<div class="btn-group formBtnGroup topRight col-md-offset-2">
				<input class="btn btn-primary btn-first" type="button" value="保存"
					 ng-click="saveRoleOperate(role)" style="border:none"
					ng-disabled="roleOperateForm.$invalid" />  
				<input
					class="btn btn-primary btn-last" type="button" value="返回"
					ng-click="closeOperateTab()" />
			</div>
			</div>
		</form>
	</div>
</div>
